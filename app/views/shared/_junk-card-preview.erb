<div class="junk-card">

    <div class="junk-card-img">

      <%= image_tag("https://res.cloudinary.com/dfkgih0bp/image/upload/v1668949083/development/ValueJunk/internal%20img%20%28website%20itself%29/images/no-img-placeholder_acr54j.jpg",
            crop: :fill, class: 'd-block', alt: 'image cover for junk', data: {junk_card_target: "card_photo"})%>

      <% if junk.donation %>
        <p class="donation">DONATION</p>
      <% end %>
    </div>

    <div class="junk-card-content">
      <h2 data-junk-card-target="card_title"><%= junk.title %></h2>
      <p data-junk-card-target="card_price"><%= junk.price %>â‚¬</p>
      <%# if junk.delivery %>
        <%#  <p class="secondary-button-3">Delivery possible</p> %>
      <%# end %>

      <div class="junk-card-bottom">
        <div class="address-date">
          <p data-junk-card-target="card_address"><%= junk.address.split(", ")[1] %> - </p>
        </div>
        <div class="heart">
          <i class="fa-regular fa-heart fa-lg"></i>
        </div>
      </div>
    </div>

</div>
