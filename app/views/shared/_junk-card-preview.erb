<div class="junk-card">

    <div class="junk-card-img">

      <%= image_tag("https://res.cloudinary.com/dvveiqb1p/image/upload/v1670528656/House-Clearance_icaeeb.jpg",
            crop: :fill, class: 'd-block', alt: 'image cover for junk', data: {junk_card_target: "card_photo"})%>


        <p data-junk-card-target="card_donation"  class="donation vis">DONATION</p>

    </div>


    <div class="junk-card-content">
      <h2 data-junk-card-target="card_title"><%= junk.title %></h2>
        <div class="price-delivery">

          <p data-junk-card-target="card_price"><%= junk.price %>â‚¬</p>
          <p class="secondary-button-3 text-nowrap delivery-vis"
