<% @junks.each do |junk| %>
  <div class="junk-card">
    <%= link_to junk_path(junk) do %>
      <div class="junk-card-img">
        <% if junk.photos.attached? %>
          <%= cl_image_tag junk.photos.first.key, crop: :fill, class: 'w-100 h-100 d-block', alt: 'image of junk item' %>
        <% else %>
          <%= cl_image_tag("no-img-placeholder_acr54j", crop: :fill), class: 'd-block w-100 h-100', alt: 'image cover for bar' %>
        <% end %>

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @junk.photos.first(3).each_with_index do |photo, index| %>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, class: "d-block w-100 h-100" alt: 'image junk' %>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, class: "d-block w-100 h-100" alt: 'image junk' %>
                </div>
              <% end %>
            <% end %>
          </div>
          <% if @junk.photos.many? %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          <% end %>
        </div>
        <% if junk.donation %>
          <div class="junk-card-ad">
          </div>
        <% end %>
      </div>

      <div class="junk-card-content">
        <div class="junk-card-title">
          <h2><%= junk.title %></h2>
        </div>
        <div class="price">
          <p><%= junk.price %></p>
        </div>

        <div class="junk-card-bottom">
          <div class="details">
            <p><%= junk.address %></p>
            <p><%= junk.created_at %></p>
          </div>
          <div class="heart">
            <i class="fa-regular fa-heart"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%end%>
