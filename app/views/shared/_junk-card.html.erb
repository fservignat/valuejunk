<% junks.each do |junk| %>
  <div class="junk-card">
    <%= link_to junk_path(junk) do %>
      <%# <div class="junk-card-img"> %>
        <% if junk.photos.any? %>
          <%# cl_image_tag junk.photos.first.key, crop: :fill, class: 'w-100 h-100 d-block', alt: 'image of junk item' %>
          <div id="carouselExampleControls-<%= junk.id %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% junk.photos.first(3).each_with_index do |photo, index| %>
                <% if index == 0 %>
                  <div class="carousel-item active h-100">
                    <%= cl_image_tag(photo.key, class: 'd-block w-100 h-100', alt: 'image junk') %>
                  </div>
                <% else %>
                  <div class="carousel-item h-100">
                    <%= cl_image_tag(photo.key, class: 'd-block w-100 h-100', alt: 'image junk') %>
                  </div>
                <% end %>
              <% end %>
            </div>
            <% if junk.photos.any? %>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls-<%= junk.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls-<%= junk.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            <% end %>
          </div>
        <% else %>
          <%= cl_image_tag("no-img-placeholder_acr54j", crop: :fill, class: 'd-block w-100 h-100', alt: 'image cover for junk') %>
        <% end %>

        <% if junk.donation %>
          <div class="junk-card-ad">
            <p>DONATION</p>
          </div>
        <% end %>
      <%# </div> %>

      <div class="junk-card-content">
        <h2><%= junk.title %></h2>
        <p><%= junk.price %></p>

        <div class="junk-card-bottom">
          <div class="details">
            <p><%= junk.address %></p>
            <p><%= junk.created_at %></p>
          </div>
          <div class="heart">
            <i class="fa-regular fa-heart"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%end%>
