  <h1>Post an AD</h1>




  <form class="simple_form new_service" id="new_service" novalidate="novalidate" enctype="multipart/form-data" action="/services" accept-charset="UTF-8" method="post">

    <div class="mb-3"><label class="form-label string required" for="service_title">Title <abbr title="required">*</abbr></label><input class="form-control string required" type="text" name="service[title]" id="service_title" /></div>

    <div class="service-info-flex">
      <div class="mb-3"><label class="form-label string required" for="service_address">Address <abbr title="required">*</abbr></label><input class="form-control string required" type="text" name="service[address]" id="service_address" /></div>
      <div class="mb-3"><label class="form-label integer optional" for="service_price">Price</label><input class="form-control numeric integer optional" type="number" step="1" name="service[price]" id="service_price" /></div>
      <fieldset class="mb-3"><div class="form-check"><input name="service[volunteer]" type="hidden" value="0" autocomplete="off" /><input class="form-check-input boolean optional" type="checkbox" value="1" name="service[volunteer]" id="service_volunteer" /><label class="form-check-label boolean optional" for="service_volunteer">Volunteer</label></div></fieldset>
    </div>

    <div class="service-info-flex">
      <div class="mb-3 service-description-widen"><label class="form-label text optional" for="service_description">Description</label><textarea class="form-control text optional" name="service[description]" id="service_description"></textarea></div>
      <div>
        <div class="mb-3"><label class="form-label string required" for="service_craft">Craft <abbr title="required">*</abbr></label><input class="form-control string required" type="text" name="service[craft]" id="service_craft" /></div>
        <div class="mb-3"><label class="form-label file optional" for="service_photos">Photos</label><input name="service[photos][]" type="hidden" value="" autocomplete="off" /><input class="form-control file optional" multiple="multiple" type="file" name="service[photos][]" id="service_photos" /></div>
      </div>
    </div>

    <input type="submit" name="commit" value="Create Service" class="btn btn-primary" data-disable-with="Create Service" />


  </form>
