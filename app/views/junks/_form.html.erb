          <%= f.input :title %>
          <%= f.input :description %>
          <%# The placeholder below is temporarly and should become a dropdown  %>
          <%= f.input :category,  placeholder: '"Furniture", "Electronics / Appliance", "Toys", "Clothing", "Plastics", "DÃ©cor", "Arts", "Others"' %>
